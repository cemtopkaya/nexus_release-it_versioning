{
  "git": {
    "requireCleanWorkingDir": true,
    "commitMessage": "${env.ISSUE_ID} - message",
    "tagName": "${name}-${version}",
    "push": true,
    "repo": "https://bitweb.telenity.com/scm/~cemt/versioning.git"
  },
  "npm": {
    "publish": false,
    "registry": "http://nexus:8081/repository/npm-releases/"
  },
  "plugins": {},
  "hooks": {
    "before:init": [
      "echo 'Extracting issue ID from branch name...'",
      "export ISSUE_ID=$(git branch --show-current | grep -oE '[A-Z]+-[0-9]+' | head -n1 || true)"
    ]
  }
}