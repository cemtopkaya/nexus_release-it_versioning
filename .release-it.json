{
  "git": {
    "requireCleanWorkingDir": true,
    "commitMessage": "${env.ISSUE_ID} - message",
    "tagName": "${pkg.name}-${pkg.version}",
    "push": true,
    "repo": "https://bitweb.telenity.com/scm/~cemt/versioning.git"
  },
  "npm": {
    "publish": false,
    "registry": "http://nexus:8081/repository/npm-releases/"
  },
  "plugins": {},
  "hooks": {
    "before:init": [
      "read -p 'Enter JIRA Issue ID: ' issue_id; export ISSUE_ID=$issue_id"
    ]
  }
}