{
  "name": "@ornekKapsam/surum",
  "version": "4.0.1",
  "publishConfig": {
    "registry": "http://nexus:8081/repository/npm-paket-deposu/"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "rit": "release-it --config package.json",
    "release:minor": "npm run rit -- minor",
    "release:major": "npm run rit -- major",
    "release:patch": "npm run rit -- patch",
    "release:snapshot": "npm run rit -- prepatch --preReleaseId SNAPSHOT",
    "release:beta": "npm run rit -- --preRelease=beta",
    "release:alpha": "npm run rit -- --preRelease=alpha",
    "release:dry": "npm run rit -- --dry-run",
    "release:ci": "npm run rit -- --ci",
    "release:prepatch": "export JIRA_ID=$(git log -n1 --pretty=format:%s | cut -d' ' -f1 | xargs) && npx release-it --config package.json --preReleaseId SNAPSHOT"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "release-it": "^19.0.4"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "commitMessage": "${process.env.JIRA_ID} -- Release ${name}@${version}",
      "tagName": "${name}-${version}",
      "push": true,
      "repo": "https://bitweb.telenity.com/scm/~cemt/versioning.git"
    },
    "npm": {
      "publish": false,
      "registry": "http://nexus:8081/repository/npm-releases/"
    },
    "hooks": {
      "before:init": "export JIRA_ID=$(git log -n1 --pretty=format:%s | cut -d' ' -f1 | xargs)"
    }
  }
}