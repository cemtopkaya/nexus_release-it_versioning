{
  "name": "@ornekKapsam/surum",
  "version": "7.0.1-SNAPSHOT.0",
  "publishConfig": {
    "registry": "http://nexus:8081/repository/npm-paket-deposu/"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "jiraid": "git log -n1 --pretty=format:%s | cut -d' ' -f1 | xargs > .jiraid",
    "rit": "dotenv -e .env -- release-it --config package.json",
    "release:major": "npm run rit -- major",
    "release:premajor:snapshot": "npm run rit -- premajor --preReleaseId SNAPSHOT",
    "release:minor": "npm run rit -- minor",
    "release:preminor:snapshot": "npm run rit -- preminor --preReleaseId SNAPSHOT",
    "release:patch": "npm run rit -- patch",
    "release:prepatch:snapshot": "npm run rit -- prepatch --preReleaseId SNAPSHOT",
    "release:dry": "npm run rit -- --dry-run",
    "release:ci": "npm run rit -- --ci"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "dotenv-cli": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prompt": "^1.3.0",
    "release-it": "^19.0.4"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "commitMessage": "${process.env.JIRA_ID} -- Release ${name}@${version}",
      "tagName": "${name}-${version}",
      "push": true,
      "repo": "https://bitweb.telenity.com/scm/~cemt/versioning.git"
    },
    "npm": {
      "publish": false,
      "registry": "http://nexus:8081/repository/npm-releases/"
    },
    "hooks": {
      "before:init": "echo -n JIRA_ID=$(git log -n1 --pretty=format:%s | cut -d' ' -f1 | xargs) > .env"
    }
  }
}
