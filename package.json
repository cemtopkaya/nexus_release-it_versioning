{
  "name": "@ornekKapsam/surum",
  "version": "8.3.1-SNAPSHOT.0",
  "publishConfig": {
    "registry": "http://nexus:8081/repository/npm-paket-deposu/"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "rit": "dotenv -e .env -- release-it --config package.json",
    "rit:snapshot": "npm run rit -- --preReleaseId SNAPSHOT",
    "__major___": "____________________________________________________________",
    "rit:major": "npm run rit -- major",
    "rit:premajor": "npm run rit:snapshot -- premajor",
    "__minor___": "____________________________________________________________",
    "rit:minor": "npm run rit -- minor",
    "rit:preminor": "npm run rit:snapshot -- preminor",
    "__patch___": "____________________________________________________________",
    "rit:patch": "npm run rit -- patch",
    "rit:prepatch": "npm run rit:snapshot -- prepatch",
    "rit:prepatch:snapshot": "npm run rit -- --preReleaseId SNAPSHOT",
    "rit:dry": "npm run rit -- --dry-run",
    "rit:ci": "npm run rit -- --ci"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "dotenv-cli": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prompt": "^1.3.0",
    "release-it": "^19.0.4"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "commit": true,
      "tag": true,
      "push": true,
      "commitMessage": "${process.env.JIRA_ID} -- Release ${name}@${version}",
      "tagName": "${name}-${version}",
      "tagAnnotation": "v${version} production release",
      "repo": "https://bitweb.telenity.com/scm/~cemt/versioning.git"
    },
    "npm": {
      "publish": false,
      "registry": "http://nexus:8081/repository/npm-releases/"
    },
    "hooks": {
      "before:init": "echo -n JIRA_ID=$(git log -n1 --pretty=format:%s | awk -F'--' '{print $1}' | xargs) > .env"
    }
  }
}
