{
  "name": "@ornekKapsam/surum",
  "version": "4.0.1",
  "publishConfig": {
    "registry": "http://nexus:8081/repository/npm-paket-deposu/"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "release-it": "^19.0.4"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "commitMessage": "${JIRA_ID} -- Release ${name}@${version}",
      "tagName": "${name}-${version}",
      "push": true,
      "repo": "https://bitweb.telenity.com/scm/~cemt/versioning.git"
    },
    "npm": {
      "publish": false,
      "registry": "http://nexus:8081/repository/npm-releases/"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        },
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": [
        "echo -n 'Enter JIRA Issue ID: '; read issue_id; export ISSUE_ID=$issue_id"
      ],
      "after:release": [
        "echo 'Deployed to staging environment'",
        "npm run deploy:staging"
      ]
    }
  }
}